generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id                 String        @id @default(uuid())
  nome               String?
  email              String        @unique
  senhaHash          String
  profissao          String?
  empresa            String?
  criadoEm           DateTime      @default(now())
  foto               String?
  areaTotal          Float?
  cultivos           String?
  dispositivosAtivos Int?
  ultimaAtualizacao  DateTime?
  dispositivos       Dispositivo[]
}

model Dispositivo {
  id        String       @id @default(uuid())
  nome      String
  deviceId  String       @unique
  usuarioId String
  criadoEm  DateTime     @default(now())
  sensores  DadoSensor[]
  usuario   Usuario      @relation(fields: [usuarioId], references: [id])
}

model DadoSensor {
  id            String      @id @default(uuid())
  dispositivoId String
  umidadeSolo   Float?
  luminosidade  Float?
  umidadeAr     Float?
  temperaturaAr Float?
  criadoEm      DateTime    @default(now())
  dispositivo   Dispositivo @relation(fields: [dispositivoId], references: [id])
}

